FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Create startup script
RUN echo '#!/bin/sh' > /app/start-dev.sh && \
    echo 'echo "🚀 Starting MedSync Frontend in Development Mode..."' >> /app/start-dev.sh && \
    echo 'echo "🌐 Starting Vite development server..."' >> /app/start-dev.sh && \
    echo 'npm run dev -- --host 0.0.0.0 --port 5173' >> /app/start-dev.sh && \
    chmod +x /app/start-dev.sh

# Start the application
CMD ["/app/start-dev.sh"]
